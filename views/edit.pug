extends layout
block content
  .container(style="width: 50%; background: whitesmoke; padding: 10%;")
    br
    h2 Edit
    form(action="/updateAd/"+ads._id method="post")
      .form-group
        input.form-control(type='text' placeholder='Title' name='Title' value=ads.Title required='true')
      .form-group
        input.form-control(type='text' placeholder='Description' name='Description' value=ads.Description required='true')
      .form-group
        input.form-control(type='Number' placeholder='Price' name='Price' value=ads.Price required='true')
      button.btn.btn-primary(type='submit') Submit